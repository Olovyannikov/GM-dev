    ];

section.business.business--gsm
    .container.business__container
        h2(data-aos="fade-down" data-aos-duration="500").business__title.business__title--gsm.title Бизнес-модель
            span для сотрудничества
        .business__tabs.tabs
            .tabs__controls
                button(type="button").tabs__button.tabs__button--active Агентская модель
                button(type="button").tabs__button Сервисная модель
            .tabs__items
                ul.tabs__item.tabs__item--active.business__list.business__list--gsm
                    each item in list
                        li(data-aos="flip-right" data-aos-duration="500").business__item.business__item--gsm
                            span.business__counter 0#{item.id}
                            h5.business__item-title #{item.title}
                            p.business__item-text #{item.text}
                ul.tabs__item.business__list.business__list--gsm
                    each item in service
                        li(data-aos="flip-right" data-aos-duration="500").business__item.business__item--gsm
                            span.business__counter 0#{item.id}
                            h5.business__item-title #{item.title}
                            p.business__item-text #{item.text}
